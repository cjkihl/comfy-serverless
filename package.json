{
  "name": "cj",
  "private": true,
  "workspaces": [
    "cj/*"
  ],
  "scripts": {
    "build": "bun -F '*' build",
    "clean": "git clean -fxd -e .env.local",
    "dev": "bun -F '*' dev",
    "format": "biome format .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "biome check . && manypkg check && bun run knip",
    "lint-fix": "biome check --write . && manypkg fix && bun run knip:fix",
    "sort-package-json": "sort-package-json package.json **/*/package.json",
    "test": "bun -F '*' test",
    "type-check": "bun -F '*' type-check",
    "up": "bunx npm-check-updates -ws --root --format group -u",
    "ci": "bun run build && bun run lint && bun run test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@cjkihl/create-exports": "1.0.6",
    "@cjkihl/tsconfig": "^1.0.9",
    "@cjkihl/with-env": "1.0.9",
    "@manypkg/cli": "0.25.1",
    "@types/bun": "1.3.0",
    "@types/node": "24.9.1",
    "knip": "^5.50.0",
    "sort-package-json": "3.4.0",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.0"
}